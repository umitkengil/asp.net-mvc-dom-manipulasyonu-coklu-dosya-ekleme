@model List<Bes.Models.OzetMasraf>

<style>
    #stateColor {
        border-radius: 5px;
        width: 100px;
        text-align: center;
    }

    #txtCenter {
        text-align: center !important;
    }
</style>


<table id="example1" class="table table-bordered table-sm table-striped">
    <thead>
        <tr>
            <th>Mağaza Adı</th>
            <th>Masraf Adı</th>
            <th>Masraf Açıklama</th>
            <th>Masraf</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="300px">@item.magazaAdi</td>
                @if (item.masrafAdi != null)
                {
                    <td width="300px">@item.masrafAdi</td>
                }
                else
                {
                    <td width="300px"><label class="text-danger">Açıklama Girilmemiş</label></td>
                }

                @if (item.masrafAciklama != null)
                {
                    <td width="300px">@item.masrafAciklama</td>
                }
                else
                {
                    <td width="300px"><label class="text-danger">Açıklama Girilmemiş</label></td>
                }
                <td>@string.Format("{0:C0}", item.masraf)</td>
            </tr>
        }
    </tbody>
</table>


