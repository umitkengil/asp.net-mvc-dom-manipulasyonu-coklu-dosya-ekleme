@model  Bes.Models.BesEntity.userTable

@{
    ViewBag.Title = "Kullanıcı Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="alert alert-warning alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <h5><i class="icon fas fa-exclamation-triangle"></i> UYARI!!!!!</h5>
    <ul>
        <li>Tüm Alanlar Doldurulmalıdır</li>
    </ul>
</div>
<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("EditUsers", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.userID, new { @class = "form-control d-none" })
                    <label>Mağaza Kodu</label>
                    @Html.DropDownListFor(m => m.storeTable.storeID, (List<SelectListItem>)ViewBag.magazaKodu, "Seçiniz",
                       new
                            {
                           @id = "txtstore",
                           @class = "form-control"
                       })
                    @*<input type="text" class="form-control" name="storeCode" placeholder="Mağaza Kodu" />*@
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    @Html.TextAreaFor(m => m.username, new { @class = "form-control" })
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label>Şifre</label>
                    @Html.TextAreaFor(m => m.password, new { @class = "form-control" })
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label>Unvanı</label>
                    @Html.TextAreaFor(m => m.user_position, new { @class = "form-control" })
                </div>
            </div>

        </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-outline-success float-right">
                        <i class="fas fa-edit"></i>&nbsp; Güncelle
                    </button>
                    <a href="@Url.Action("UsersIndex", "Admin")" type="reset" class="btn btn-outline-danger float-left">
                        <i class="fas fa-times-circle"></i>&nbsp; İptal Et
                    </a>
                </div>
            </div>
        }
    </div>
</div>



